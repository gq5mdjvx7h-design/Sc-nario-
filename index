<script>
/* ===============================
   SÉCURITÉ / DEBUG
================================ */
const DEBUG_CODE = "1234";
function openDebug() {
  const code = prompt("Code debug ?");
  if (code === DEBUG_CODE) {
    document.getElementById("debug").classList.remove("hidden");
  }
}

/* ===============================
   SNAPSHOT / RECOVERY
================================ */
function saveSnapshot(data) {
  localStorage.setItem("module3_snapshot", JSON.stringify(data));
}
function loadSnapshot() {
  const s = localStorage.getItem("module3_snapshot");
  return s ? JSON.parse(s) : null;
}

/* ===============================
   MOTEUR CENTRAL
================================ */
function runEngine() {

  const config = {
    method: document.getElementById("method").value,
    start: document.getElementById("startDate").value,
    end: document.getElementById("endDate").value,
    monthlyClose: Number(document.getElementById("monthlyClose").value),
    weekend: document.getElementById("countWeekend").checked,
    holidays: document.getElementById("countHolidays").checked,
    step: Number(document.getElementById("step").value)
  };

  const dayData = {
    normal: roundStep(Number(document.getElementById("normalHours").value), config.step),
    extra: roundStep(Number(document.getElementById("extraHours").value), config.step),
    holiday: document.getElementById("isHoliday").checked,
    absent: document.getElementById("isAbsent").checked
  };

  const result = {
    totalExtra: 0,
    payableExtra: 0,
    annualCounter: 0,
    warnings: []
  };

  if (dayData.absent) {
    result.warnings.push("Jour d’absence : aucune heure comptabilisée");
  } else {
    if (dayData.holiday && !config.holidays) {
      result.warnings.push("Jour férié non comptabilisé");
    } else {
      result.totalExtra += dayData.extra;
    }
  }

  if (config.method === "monthly") {
    result.payableExtra = result.totalExtra;
  }

  if (config.method === "annual") {
    const year = new Date().getFullYear();
    const annualKey = "annual_" + year;
    const current = Number(localStorage.getItem(annualKey)) || 0;
    result.annualCounter = current + result.totalExtra;
    localStorage.setItem(annualKey, result.annualCounter);
  }

  saveSnapshot({ config, dayData, result });

  render(result, config, dayData);
}

/* ===============================
   OUTILS
================================ */
function roundStep(value, step) {
  return Math.round(value / step) * step;
}

function render(result, config, dayData) {
  const out = document.getElementById("output");
  out.innerHTML = `
  <b>Résultat moteur</b><br><br>
  Méthode : ${config.method}<br>
  HS comptabilisées : ${result.totalExtra} h<br>
  ${
    config.method === "monthly"
    ? `HS payables : ${result.payableExtra} h`
    : `Compteur annuel : ${result.annualCounter} h`
  }
  <br><br>
  ${result.warnings.join("<br>")}
  `;

  document.getElementById("debug").innerText =
    JSON.stringify({config, dayData, result}, null, 2);
}

/* ===============================
   AUTO RECOVERY
================================ */
const snap = loadSnapshot();
if (snap) {
  document.getElementById("debug").classList.remove("hidden");
  document.getElementById("debug").innerText =
    "Snapshot restauré :\n" + JSON.stringify(snap, null, 2);
}
</script>

